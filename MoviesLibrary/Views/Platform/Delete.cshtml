@model MoviesLibrary.Models.Platform
@{
    ViewData["Title"] = "Delete Platform";
}

<div class="centerItems">
    <h1>Delete Platform</h1>
    <hr/>

    <h3>Are you sure you want to delete this Platform?</h3>
    <div>
        <h4>Platform Name: <span id="itemToDelete"> @Model.Platformname </span></h4>
    </div>

    <form asp-action="Delete" id="deleteItemConfirm" asp-route-id="@Model.Id" method="post">
        <div>
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-asp-controller="Platform" asp-action="ViewAll" class=" btn btn-dark">Cancel</a>
        </div>
        @Html.AntiForgeryToken()
    </form>
</div>
