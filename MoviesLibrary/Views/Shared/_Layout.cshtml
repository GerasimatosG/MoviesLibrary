<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MoviesLibrary</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MoviesLibrary.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Movies Library</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">                       
                        <list class="nav-item dropdown">                            
                            <a class="nav-link dropdown-toggle  text-dark" id="navbarDropdownUsers" role="button" data-bs-toggle="dropdown">
                                Movies
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownUsers">
                                <a class="nav-link text-dark" asp-controller="Movie" asp-action="ViewAll">All Movies</a>                                
                                <a class="nav-link text-dark" asp-controller="Movie" asp-action="Create">Add Movie</a>
                                <a class="nav-link text-dark" asp-controller="Movie" asp-action="Edit">Edit Movie</a>
                                <a class="nav-link text-dark" asp-controller="Movie" asp-action="Delete">Delete Movie</a>
                            </div>
                        </list>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle  text-dark" id="navbarDropdownList" role="button" data-bs-toggle="dropdown">
                                Categories
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownList">
                                <a class="dropdown-item" asp-controller="Category" asp-action="Create">Create New Category</a>                               
                                <a class="dropdown-item" asp-controller="Category" asp-action="ViewAll">All Categories</a>                       
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle  text-dark" id="navbarDropdownList" role="button" data-bs-toggle="dropdown">
                                Actors
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownList">
                                <a class="dropdown-item" asp-controller="Actor" asp-action="Create">Add New Actor</a>
                                <a class="dropdown-item" asp-controller="Actor" asp-action="ViewAll">All Actors</a>                                
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle  text-dark" id="navbarDropdownList" role="button" data-bs-toggle="dropdown">
                                Platforms
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownList">
                                <a class="dropdown-item" asp-controller="Platform" asp-action="Create">Add New Platform</a>
                                <a class="dropdown-item" asp-controller="Platform" asp-action="ViewAll">All Platforms</a>                              
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Random" asp-action="RandomSelect"  role="button">
                                Random Movie
                            </a>                                                  
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - MoviesLibrary - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
